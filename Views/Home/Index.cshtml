@{
    ViewData["Title"] = "Home";
}

<div class="container py-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="display-4 fw-bold mb-3">Welcome to PodcastHub</h1>
            <p class="lead text-muted mb-4">
                Share your voice. Discover new stories. Join the podcast community today.
            </p>

            <div class="d-flex justify-content-center gap-3 mt-4">
                <a href="/Identity/Account/Login" class="btn btn-primary btn-lg px-4">
                    Login
                </a>
                <a href="/Identity/Account/Register" class="btn btn-outline-primary btn-lg px-4">
                    Register
                </a>
            </div>

            <hr class="my-5">

            <p class="text-muted small">
                Don’t have an account? Register to start your podcast journey.<br />
                Already a member? Log in to access your dashboard.
            </p>
        </div>
    </div>
</div>
