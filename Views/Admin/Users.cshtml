@model List<User>

@{
    ViewData["Title"] = "User Management";
}

<h2 class="mb-4 text-center">User Management</h2>

<table class="table table-bordered table-striped text-center">
    <thead class="table-dark">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>User ID</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
					<td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Id</td>
                    <td>
                        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this user and all their podcasts & episodes?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">No non-admin users found.</td>
            </tr>
        }
    </tbody>
</table>
