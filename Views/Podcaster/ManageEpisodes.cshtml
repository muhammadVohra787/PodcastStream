@model Podcast_MVC.Models.Podcast

@{
    ViewData["Title"] = "Manage Episodes";
}

<h2 class="mb-4">@Model.Title - Manage Episodes</h2>

<!-- Button to toggle Add Episode modal -->
<button class="btn btn-primary mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#addEpisodeForm" aria-expanded="false" aria-controls="addEpisodeForm">
    + Add New Episode
</button>

<!-- Collapsible Add Episode Form -->
<div class="collapse mb-4" id="addEpisodeForm">
    <div class="card card-body">
        <form asp-action="AddEpisode" method="post" enctype="multipart/form-data">
            <input type="hidden" name="PodcastID" value="@Model.PodcastID" />
            <div class="mb-3">
                <label class="form-label">Title</label>
                <input name="Title" class="form-control" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Audio File</label>
                <input type="file" name="AudioFile" class="form-control" accept=".mp3,.wav" required />
            </div>

            <button type="submit" class="btn btn-success">Upload Episode</button>
        </form>
    </div>
</div>

<!-- Show existing episodes -->
@if (Model.Episodes != null && Model.Episodes.Any())
{
    <div class="mt-3">
        @foreach (var episode in Model.Episodes)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center flex-wrap">

                    <!-- Left side: Episode info -->
                    <div>
                        <h6 class="card-title mb-1">@episode.Title</h6>
                        <span class="badge bg-secondary">@episode.getStatus()</span>
                    </div>

                    <!-- Right side: Actions -->
                    <div class="d-flex gap-2 mt-2 mt-sm-0">
                        <a asp-action="EditEpisode" asp-route-id="@episode.EpisodeID" class="btn btn-warning btn-sm">
                            Edit
                        </a>

                        <form asp-action="DeleteEpisode" asp-route-id="@episode.EpisodeID" method="post" class="m-0">
                            <button type="submit" class="btn btn-danger btn-sm">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p class="text-muted mt-3">No episodes yet.</p>
}
